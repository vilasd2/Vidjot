{{#each ideas}}
    <div class="card card-body mb-2">
        <h4>{{title}}</h4>
        <p>{{details}}</p>
        

        <form method="post" action="/ideas/{{id}}?_method=DELETE">
        <a class="btn btn-dark mb-2" href = "/ideas/edit/{{id}}"> Edit</a>
        <input type="hidden" name = "_method" value="DELETE">
        
        <input type="submit" class="btn  btn-danger mb-2" value="Delete">

        </form>

    </div>
{{else}}
    <p> No video ideas listed</p>
{{/each}}